@model Cliente
@{
    ViewData["Title"] = "Clientes ordenados por nombre";
}
<h1>@ViewData["Title"]</h1>

<table>
    <thead>
        <tr>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Número de telefono</td>
            <td>Descripción</td>
        </tr>
    </thead>
    @foreach (var cliente in Cliente.sortByName()){
        <tr>
            <td>@cliente.name</td>
            <td>@cliente.lastName</td>
            <td>@cliente.phoneNumber</td>
            <td>@cliente.description</td>
        </tr>
    }
</table>